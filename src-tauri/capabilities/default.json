{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:allow-load",
    "sql:default",
    "sql:allow-execute",
    "core:window:allow-close",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://speech.platform.bing.com" }]
    }
  ]
}